<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/poi_item_RL"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:padding="@dimen/config_margin_4dp">

    <ImageView
        android:id="@+id/poi_item_icon"
        android:layout_width="@dimen/config_margin_24dp"
        android:layout_height="@dimen/config_margin_24dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_baseline_location_on_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/config_margin_10dp"
        android:layout_toEndOf="@+id/poi_item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/poi_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poi_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="细节" />
    </LinearLayout>


</RelativeLayout>